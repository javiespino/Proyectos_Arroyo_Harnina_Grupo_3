<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Icono actividad -->
        <ImageView
            android:id="@+id/imgActividad"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/reserva"
            android:background="@drawable/bg_circle_blue_light"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nombre actividad -->
        <TextView
            android:id="@+id/tvNombreActividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Zumba"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gym_blue"
            app:layout_constraintStart_toEndOf="@id/imgActividad"
            app:layout_constraintEnd_toStartOf="@id/checkCompletada"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Fecha y hora -->
        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:text="ðŸ•’ 18/02/2026 Â· 09:00 - 10:00"
            android:textSize="12sp"
            android:textColor="@color/gym_gray"
            app:layout_constraintStart_toEndOf="@id/imgActividad"
            app:layout_constraintEnd_toStartOf="@id/checkCompletada"
            app:layout_constraintTop_toBottomOf="@id/tvNombreActividad" />

        <!-- Badge estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Pendiente"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:background="@drawable/bg_chip_green"
            android:textColor="#E65100"
            app:layout_constraintStart_toEndOf="@id/imgActividad"
            app:layout_constraintTop_toBottomOf="@id/tvFechaHora" />

        <!-- BotÃ³n cancelar -->
        <TextView
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="Cancelar"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:background="@drawable/bg_rounded_chip"
            android:textColor="@color/gym_gray"
            app:layout_constraintStart_toEndOf="@id/tvEstado"
            app:layout_constraintTop_toBottomOf="@id/tvFechaHora" />

        <!-- Checkbox completada -->
        <CheckBox
            android:id="@+id/checkCompletada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/gym_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>