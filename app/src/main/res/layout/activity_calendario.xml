<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gym_bg"
    tools:context=".CalendarioActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gym_blue"
        android:elevation="4dp"
        app:title="Reservar Clase"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Secci贸n Seleccionar Actividad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona la actividad"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gym_blue"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerActividades"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_rounded_chip"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Secci贸n Calendario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona la fecha"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gym_blue"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dateTextAppearance="@style/CalendarDateText"
                    android:weekDayTextAppearance="@style/CalendarWeekDayText" />
            </androidx.cardview.widget.CardView>

            <!-- Secci贸n Horarios Disponibles -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios disponibles"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gym_blue"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerHorarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:minHeight="120dp" />
            </androidx.cardview.widget.CardView>

            <!-- Detalles de la reserva seleccionada -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDetallesReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/gym_blue"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detalles de tu reserva"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDetallesActividad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        tools:text="Actividad: Zumba" />

                    <TextView
                        android:id="@+id/tvDetallesFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        tools:text="Fecha: 05/02/2026" />

                    <TextView
                        android:id="@+id/tvDetallesHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        tools:text="Hora: 18:00" />

                    <TextView
                        android:id="@+id/tvDetallesPlazas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        tools:text="Plazas disponibles: 15/20" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bot贸n Confirmar -->
            <Button
                android:id="@+id/btnConfirmarReserva"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Confirmar Reserva"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/gym_orange"
                android:enabled="false"
                app:cornerRadius="20dp" />

            <!-- ProgressBar para loading -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:indeterminateTint="@color/gym_orange" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>