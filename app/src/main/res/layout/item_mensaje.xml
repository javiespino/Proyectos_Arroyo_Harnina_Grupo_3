<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMensaje"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="3dp"
    android:paddingHorizontal="4dp">

    <!-- La gravedad (start/end) se cambia desde el adapter segÃºn el rol -->
    <LinearLayout
        android:id="@+id/bubbleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_bubble_received">

        <TextView
            android:id="@+id/tvNombreRemitente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/gym_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTextoMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/tvHoraMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:textColor="#9E9E9E" />

    </LinearLayout>

</LinearLayout>