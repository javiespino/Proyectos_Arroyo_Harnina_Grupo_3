<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rutinaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sporthub.RutinaActivity"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rutina semanal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Spinner para seleccionar día -->
    <TextView
        android:id="@+id/tvSeleccionDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar día"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloRutina"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinnerDias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSeleccionDia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Spinner para seleccionar ejercicio -->
    <TextView
        android:id="@+id/tvSeleccionEjercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar ejercicio"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerDias"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinnerEjercicios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSeleccionEjercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Botón añadir ejercicio -->
    <Button
        android:id="@+id/btnAnadirEjercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Añadir ejercicio"
        app:layout_constraintTop_toBottomOf="@id/spinnerEjercicios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView para mostrar días + ejercicios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEjercicios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnAnadirEjercicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
