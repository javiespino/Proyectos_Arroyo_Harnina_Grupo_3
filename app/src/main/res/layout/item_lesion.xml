<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLesion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fila superior: zona + estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvZonaLesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hombro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gym_blue" />

            <TextView
                android:id="@+id/tvEstadoLesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Activa"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionLesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Sin notas"
            android:textSize="13sp"
            android:textColor="#757575" />

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvFechasLesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Inicio: 01/01/2025"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnMarcarRecuperado"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="✓ Recuperado"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#4CAF50"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEliminarLesion"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Eliminar"
                android:textSize="12sp"
                android:textColor="#F44336"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#F44336" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>